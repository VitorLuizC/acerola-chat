root = true

# Default settings
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Pug files
[*.pug]
indent_size = 2
indent_style = space

# JavaScript files
[*.{js,json}]
indent_size = 2
indent_style = space

# Stylesheets
[*.{styl,css}]
indent_size = 2
indent_style = space
