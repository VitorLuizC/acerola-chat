html
body
  height: 100%

html
  font-size: 62.5% // rem = 10px

body
{form-item}
  font-size: $base-font-size
  font-family: 'Roboto', sans-serif
  font-weight: 300
  line-height: 1.5
  color: #fff

body
p
{list + ',' + heading}
  margin: 0

{list}
  padding: 0

{form-item}
  box-sizing: border-box
  padding: 0
  border: 0 none transparent
  background-color: transparent
  background-image: none


p
{form-item}
  &:focus
    outline: 0 none transparent
